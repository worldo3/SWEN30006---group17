<h1>Data Form</h1>

<h4> Search by Location Name </h4>

<%= form_tag weather_data_path, :method => 'get' do %>
  <p>
  	<%= label_tag(:by_id, "Search for:") %>
    <%= select_tag :by_location, options_from_collection_for_select(@locations, :location_id, :location_id) %>
    <%= select_tag :by_date, options_for_select(@dates) %>
    <%= submit_tag "Submit", :name => nil%>
  </p>
<% end %>


<h4> Search by Postcode </h4>
<%= form_tag weather_data_path, :method => 'get' do %>
  <p>
  	<%= label_tag(:by_post, "Search for:") %>
    <%= select_tag :by_postcode, options_for_select(@postcodes) %>
    <%= select_tag :by_date, options_for_select(@dates) %>
    <%= submit_tag "Submit", :name => nil%>
  </p>
<% end %>

<%= link_to 'home', weathers_path %>